/**
 * Custom Styles here.
 */

 *
  font-family Arial,Microsoft Yahei,Hiragino Sans GB,Heiti SC,WenQuanYi Micro Hei,sans-serif!important
.home .hero img
  max-width 450px!important

#header
  padding 0 32px
  padding-top 10px

.header-wrapper .title a
  text-transform none
  color $accentColor
  font-size 24px

#mobile-header .mobile-header-title .mobile-home-link
  text-transform none
  color $accentColor

#vuepress-theme-blog__post-layout .vuepress-blog-theme-content
  padding 40px
  .post-title
    margin-top 0
    font-size 26px

.content-wrapper
  padding-top 90px
  padding-bottom 20px
  min-height: calc(100vh - 80px - 90px);

#app .vuepress-toc
  max-width 250px
#app .vuepress-toc .vuepress-toc-item a
    font-size 16px
#app .vuepress-toc .vuepress-toc-item
    line-height 2rem    